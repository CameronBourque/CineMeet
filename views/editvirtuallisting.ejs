<h1 class="mt-4" style="font-family:'Calibri'">CineMeet</h1>
<p class="lead mb-3" style="font-family:'Calibri'">Edit virtual movie meetup listing.</p>
<div class="row mt-5" style="font-family:'Calibri'">
    <div class="col-md-10 m-auto">
        <div class="card card-body">
            <% include ./partials/messages %>
            <form action="/listings/updatevirtual" method="POST">
                <div class="form-group col-md-6" type="hidden">
                    <input
                            type="hidden"
                            id="id"
                            name="id"
                            class="form-control"
                            value="<%= listing.id %>"
                    />
                    <input
                            type="hidden"
                            id="src"
                            name="src"
                            value="<%= src %>"
                    />
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6" >
                        <label for="listingname">Listing Name</label>
                        <input
                                type="text"
                                id="listingname"
                                name="listingname"
                                class="form-control"
                                value="<%= listing.listingName %>"
                                placeholder="Enter listing name"
                        />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="moviename">Movie Name</label>
                        <input
                                type="text"
                                id="moviename"
                                name="moviename"
                                class="form-control"
                                value="<%=listing.movieName%>"
                                placeholder="Enter movie name"
                        />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6" >
                        <label for="date">Date</label>
                        <input
                                type="date"
                                id="date"
                                name="date"
                                class="form-control"
                                value="<%=listing.date%>"
                                placeholder="Enter date"
                        />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="time">Time</label>
                        <input
                                type="time"
                                id="time"
                                name="time"
                                class="form-control"
                                value="<%=listing.time%>"
                                placeholder="Enter time"
                        />
                    </div>
                </div>
                <div class="form-group">
                    <label for="service">Streaming Service</label>
                    <select id="service" name="service" class="form-control">
                        <option value="Netflix" <%if(listing.service === "Netflix") {%>selected="true"<%}%>>Netflix</option>
                        <option value="Hulu" <%if(listing.service === "Hulu") {%>selected="true"<%}%>>Hulu</option>
                        <option value="Disney Plus" <%if(listing.service === "Disney Plus") {%>selected="true"<%}%>>Disney Plus</option>
                        <option value="Amazon Prime" <%if(listing.service === "Amazon Prime" || listing.service === "Amazon") {%>selected="true"<%}%>>Amazon Prime</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="eventtype">Event Type</label>
                    <select id="eventtype" name="eventtype" class="form-control">
                        <option value="private" <%if(listing.status === "private") {%>selected="true"<%}%>>Private</option>
                        <option value="public" <%if(listing.status === "public") {%>selected="true"<%}%>>Public</option>
                    </select>
                </div>
                <button type="submit" name="btype" value="save" class="btn btn-primary btn-block">Save Listing</button>
                <button type="submit" name="btype" value="delete" class="btn btn-primary btn-block">Delete Listing</button>
            </form>
        </div>
    </div>
</div>
